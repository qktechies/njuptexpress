<!DOCTYPE html>
<html lang="en" ng-app="express">
<head>
	<meta charset="UTF-8">
	<title>主页</title>
	<link rel="stylesheet" href="bower_components/bootstrap/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="bower_components/bootstrap/dist/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="/css/alertify.core.css"/>
    <link rel="stylesheet" href="/css/alertify.default.css"/>
    <style>
    	.tableScroll {
    		overflow: scroll;
    	}
    </style>
</head>
<body ng-controller="indexCtrl">
	<header class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<a href="" class="navbar-brand hidden-sm">外卖代领</a>	
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li><a ui-sref="admin">管理员</a></li>
					<li><a ui-sref="user">会员</a></li>
					<li><a ui-sref="express">快递</a></li>
					<li><a ui-sref="memberExpress">会员快递</a></li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li>
						<a class="disabled" ng-cloak>{{adminUser.adminUsername}}</a>
					</li>
					<li>
						<p class="navbar-btn" ng-hide="adminUser.adminUsername" ng-cloak>
                    		<a ui-sref="login" class="btn btn-success">登录</a>
                    		<span class="glyphicon glyphicon-check"></span>
                		</p>
					</li>
					<li>
						<p class="navbar-btn" ng-show="adminUser.adminUsername" ng-controller="logoutCtrl" ng-cloak>
                    		<a class="btn btn-danger" ng-click="logout()">登出</a>
                		</p>
					</li>
				</ul>
			</div>
		</div>	
	</header>

	<div class="container" style="margin-top:100px">
		<div class="row">
			<div style="margin-bottom: 20px">
				<div ui-view></div>
			</div>
		</div>
	</div>

	<script src='/bower_components/angularjs/angular.min.js'></script>
	<script src='/bower_components/angular-ui-router/release/angular-ui-router.min.js'></script>
    <script src='/bower_components/angular-bootstrap/ui-bootstrap-tpls.min.js'></script>
    <script src="/bower_components/angular-cookies/angular-cookies.min.js"></script>
    <script src="/js/alertify.min.js"></script>
	<script src='/js/app.js'></script>

    <script src='/js/directive/resize.js'></script>

    <script src='/js/service/ExpressHttp.js'></script>
    <script src='/js/service/AdminUserService.js'></script>
    <script src='/js/service/ExpressService.js'></script>
    <script src='/js/service/MemberExpressCtrl.js'></script>
    <script src='/js/service/UserService.js'></script>

    <script src="/js/controller/indexCtrl.js"></script>
	<script src='/js/controller/loginCtrl.js'></script>
	<script src='/js/controller/registCtrl.js'></script>
	<script src='/js/controller/logoutCtrl.js'></script>
	<script src='/js/controller/adminModalCtrl.js'></script>
	<script src='/js/controller/adminCtrl.js'></script>
	<script src='/js/controller/userModalCtrl.js'></script>
	<script src='/js/controller/userCtrl.js'></script>
	<script src='/js/controller/expressCtrl.js'></script>
	<script src='/js/controller/memberExpressCtrl.js'></script>

    <script src='js/filter/timeFilter.js'></script>
</body>
</html>